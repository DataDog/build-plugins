{
    "name": "@dd/core",
    "packageManager": "yarn@4.0.2",
    "private": true,
    "license": "MIT",
    "author": "Datadog",
    "description": "Core helpers for Datadog's Build Plugins",
    "homepage": "https://github.com/DataDog/build-plugins/tree/main/packages/core#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/DataDog/build-plugins",

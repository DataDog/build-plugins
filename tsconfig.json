{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2022"],
        "module": "preserve",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "rootDir": "./",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6"
    },
    "files": ["global.d.ts"],
    "include": ["**/*"],
    "exclude": ["dist", "node_modules"]
}
